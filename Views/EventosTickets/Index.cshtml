@model IEnumerable<INTRANET_CR.Models.EventosTicket>

@{
    ViewData["Title"] = "Eventos Tickets";
}

<div class="card" style="width:100%;">
    <div class="card-header">
        <div class="d-sm-flex align-items-center justify-content-between mb-0">
            <h4 class="card-title"><b>Eventos Tickets</b></h4>
            <a href="@Url.Action("Create")" class="d-none d-sm-inline-block btn btn-sm btn-outline-primary shadow-sm mx-0">@*<i class="fas fa-plus fa-sm"></i>*@ Crear</a>
        </div>
    </div>
    <div class="card-body dataTables_scroll">
        <table id="table" class="table table-striped table-sm fs--1 mb-0" style="width:100%; font-size:0.9rem">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EvtDescripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EvtResponsable)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EvtObservacion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EvtFecha)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EvtUsuario)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EvtEmpresa)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EvtUsCod)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TicCodigoNavigation)
                    </th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EvtDescripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EvtResponsable)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EvtObservacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EvtFecha)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EvtUsuario)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EvtEmpresa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EvtUsCod)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TicCodigoNavigation.TicCodigo)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.EvtCodigo">Editar</a> |
                            <a asp-action="Details" asp-route-id="@item.EvtCodigo">Ver</a> |
                            <a asp-action="Delete" asp-route-id="@item.EvtCodigo">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>


@section scripts{
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>


    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.6.5/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.6.5/js/buttons.colVis.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.6.5/js/buttons.flash.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.6.5/js/buttons.html5.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.6.5/js/buttons.print.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#table').DataTable({
                responsive: true,
                colReorder: true,
                "autoWidth": true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json",
                    searchPlaceholder: "Buscar"
                },
                "order": [[0, "desc"]],
                "dom": 'Bftip',
                "buttons": [

                    {
                        extend: 'excelHtml5',
                        className: 'btn btn-dark rounded-0',
                        text: '<i class="far fa-file-excel"></i>',
                        className: 'btn btn-success'
                    },
                    {
                        extend: 'pdf',
                        className: 'btn btn-dark rounded-0',
                        text: '<i class="far fa-file-pdf"></i>',
                        className: 'btn btn-danger'
                    },
                    {
                        extend: 'print',
                        className: 'btn btn-dark rounded-0',
                        text: '<i class="fas fa-print"></i>',
                        className: 'btn btn-info'
                    }
                ],
                "lengthMenu": [[10, 25, 50, 100, -1], [10, 25, 50, 100, "Todo"]],
            });
        });

    </script>

}


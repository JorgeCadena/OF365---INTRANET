                    <th>
                        @Html.DisplayNameFor(model => model.SoAusenciaDesde)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SoAusenciaHasta)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SoAusenciaRetorno)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SoPersonalCargo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SoPersonalCupos)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SoPersonalSueldo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SoPersonalContrato)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SoPersonalArea)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SoPersonalSucursal)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SoPersonalMotivo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SoPersonalReemplaza)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SoPersonalTiempo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SoPersonalJornada)

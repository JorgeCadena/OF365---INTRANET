                        @*<label asp-for="Id" class="form-label"></label>
                        <select asp-for="Id" class="form-control" asp-items="ViewBag.Id"></select>*@
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="UsNombre1" class="form-label"></label>
                        <input asp-for="UsNombre1" class="form-control" />
                        <span asp-validation-for="UsNombre1" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="UsNombre2" class="form-label"></label>
                        <input asp-for="UsNombre2" class="form-control" />
                        <span asp-validation-for="UsNombre2" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="UsNombre3" class="form-label"></label>
                        <input asp-for="UsNombre3" class="form-control" />
                        <span asp-validation-for="UsNombre3" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="UsApellido1" class="form-label"></label>
                        <input asp-for="UsApellido1" class="form-control" />
                        <span asp-validation-for="UsApellido1" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="UsApellido2" class="form-label"></label>
                        <input asp-for="UsApellido2" class="form-control" />
                        <span asp-validation-for="UsApellido2" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="UsEstado" class="form-label"></label>
                        <input asp-for="UsEstado" class="form-control" />
                        <span asp-validation-for="UsEstado" class="text-danger"></span>
                    </div>

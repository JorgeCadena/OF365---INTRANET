@model INTRANET_CR.Models.Usuario

@{
    ViewData["Title"] = "Aceptacion";
}

<div class="card theme-wizard mb-5" data-theme-wizard="data-theme-wizard">
    <div class="card-header bg-100 pt-3 pb-2 border-bottom-0">
        <ul class="nav justify-content-between nav-wizard" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link  fw-semi-bold" href="#bootstrap-wizard-tab1" data-bs-toggle="tab" data-wizard-step="1" aria-selected="true" role="tab">
                    <div class="text-center d-inline-block"><span class="nav-item-circle-parent"><span class="nav-item-circle"><svg class="svg-inline--fa fa-lock" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="lock" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" data-fa-i2svg=""><path fill="currentColor" d="M80 192V144C80 64.47 144.5 0 224 0C303.5 0 368 64.47 368 144V192H384C419.3 192 448 220.7 448 256V448C448 483.3 419.3 512 384 512H64C28.65 512 0 483.3 0 448V256C0 220.7 28.65 192 64 192H80zM144 192H304V144C304 99.82 268.2 64 224 64C179.8 64 144 99.82 144 144V192z"></path></svg><!-- <span class="fas fa-lock"></span> Font Awesome fontawesome.com --></span></span><span class="d-none d-md-block mt-1 fs--1">Cuenta</span></div>
                </a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link fw-semi-bold" href="#bootstrap-wizard-tab2" data-bs-toggle="tab" data-wizard-step="2" aria-selected="false" tabindex="-1" role="tab">
                    <div class="text-center d-inline-block"><span class="nav-item-circle-parent"><span class="nav-item-circle"><svg class="svg-inline--fa fa-user" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="user" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" data-fa-i2svg=""><path fill="currentColor" d="M224 256c70.7 0 128-57.31 128-128s-57.3-128-128-128C153.3 0 96 57.31 96 128S153.3 256 224 256zM274.7 304H173.3C77.61 304 0 381.6 0 477.3c0 19.14 15.52 34.67 34.66 34.67h378.7C432.5 512 448 496.5 448 477.3C448 381.6 370.4 304 274.7 304z"></path></svg><!-- <span class="fas fa-user"></span> Font Awesome fontawesome.com --></span></span><span class="d-none d-md-block mt-1 fs--1">Información Personal</span></div>
                </a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link active fw-semi-bold" href="#bootstrap-wizard-tab3" data-bs-toggle="tab" data-wizard-step="3" aria-selected="false" tabindex="-1" role="tab">
                    <div class="text-center d-inline-block"><span class="nav-item-circle-parent"><span class="nav-item-circle"><svg class="svg-inline--fa fa-file-lines" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="file-lines" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512" data-fa-i2svg=""><path fill="currentColor" d="M256 0v128h128L256 0zM224 128L224 0H48C21.49 0 0 21.49 0 48v416C0 490.5 21.49 512 48 512h288c26.51 0 48-21.49 48-48V160h-127.1C238.3 160 224 145.7 224 128zM272 416h-160C103.2 416 96 408.8 96 400C96 391.2 103.2 384 112 384h160c8.836 0 16 7.162 16 16C288 408.8 280.8 416 272 416zM272 352h-160C103.2 352 96 344.8 96 336C96 327.2 103.2 320 112 320h160c8.836 0 16 7.162 16 16C288 344.8 280.8 352 272 352zM288 272C288 280.8 280.8 288 272 288h-160C103.2 288 96 280.8 96 272C96 263.2 103.2 256 112 256h160C280.8 256 288 263.2 288 272z"></path></svg><!-- <span class="fas fa-file-alt"></span> Font Awesome fontawesome.com --></span></span><span class="d-none d-md-block mt-1 fs--1">Aceptación</span></div>
                </a>
            </li>
        </ul>
    </div>
    <form asp-action="Aceptacion">
        <div class="card-body pt-4 pb-0">
            <div class="tab-content">
                <div class="tab-pane active" role="tabpanel" aria-labelledby="bootstrap-wizard-tab1" id="bootstrap-wizard-tab1">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>                    
                    <input asp-for="UsCodigo" class="form-control" type="hidden" value="@ViewData["UsCodigo"]" />
                    <input asp-for="UsEstado" class="form-control" type="hidden" value="Activo" />
                   @* <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="terms" id="terms" />
                        <label class="form-check-label text-900" for="bootstrap-wizard-wizard-checkbox">I accept the <a href="#!">terms </a>and <a href="#!">privacy policy</a></label>
                        <br />
                        <span asp-validation-for="UsTerminos" class="text-danger"></span>
                    </div>*@
                    <div class="mb-2">
                        <div>
                            <br />
                            <p>Quito, @ViewData["Dia"] de @ViewData["Mes"] del @ViewData["Ano"]</p>
                            <br />
                            <p>
                                Yo, <b>@ViewData["Usuario"]</b> con número de cédula <b>@ViewData["Cedula"]</b>, me comprometo a dar
                                lectura a las Políticas y Planes establecidos por la empresa <b>@ViewData["Empresa"]</b>, a quien presto mis servicios profesionales, en un plazo
                                máximo de 30 días contados desde la firma de este documento, estos se encuentran
                                publicados en la intranet institucional y se detallan a continuación:
                            </p>
                            <p align ="center">
                                <b>1.</b> Plan de Contingencia
                                <br />
                                <b>2.</b> Política Anticorrupción
                                <br />
                                <b>3.</b> Política Gestión Ambiental
                                <br />
                                <b>4.</b> Política Seguridad de la Información
                                <br />
                                <b>5.</b> Política Uso Apropiado de los Sistemas de Información
                                <br />
                                <b>6.</b> Política Correo Electrónico Corporativo
                                <br />
                                <b>7.</b> Política Destrucción de la Información
                                <br />
                                <b>8.</b> Procedimiento Gestión de Incidentes y Solicitudes
                                <br />
                                <b>9.</b> Procedimiento Destrucción Información
                            </p>                         
                                                    
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer border-top-0" data-wizard-footer="data-wizard-footer">
            <div class="d-flex pager wizard list-inline mb-0">
                <button class="d-none btn btn-link ps-0" type="button" data-wizard-prev-btn="data-wizard-prev-btn"><span class="fas fa-chevron-left me-1" data-fa-transform="shrink-3"></span>Previous</button>
                <div class="flex-1 text-end">
                    <input type="submit" value="Finalizar" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

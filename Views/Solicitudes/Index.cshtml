                    <th>
                        @Html.DisplayNameFor(model => model.SoFecha)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UsCodigoNavigation)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SoTipo)
                        </td>

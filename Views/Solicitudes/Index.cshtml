                            @Html.DisplayFor(modelItem => item.SoEstado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SoFecha)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UsCodigoNavigation.UsApellido1)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.SoCodigo">Editar</a> |
                            <a asp-action="Details" asp-route-id="@item.SoCodigo">Ver</a> |
                            <a asp-action="Delete" asp-route-id="@item.SoCodigo">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>





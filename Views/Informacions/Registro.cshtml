                    <div class="row g-3">
                        <div class="col-sm-6">
                            <div class="mb-2">
                                <label asp-for="InfIdentificacion" class="form-label text-900"></label>
                                <input asp-for="InfIdentificacion" class="form-control" />
                                <span asp-validation-for="InfIdentificacion" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="mb-2">
                                <label asp-for="InfOrigen" class="form-label text-900"></label>
                                @Html.DropDownList(
                                "InfOrigen",
                                new List<SelectListItem>
                                {
                                new SelectListItem{ Text="Nacional",Value = "Nacional" },
                                new SelectListItem{ Text="Extranjero",Value = "Extranjero" }
                                }, "Seleccione una opción",
                                new { @class = "form-select"})
                                <span asp-validation-for="InfOrigen" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <div class="mb-2">
                                <label asp-for="InfEtnia" class="form-label text-900"></label>
                                @Html.DropDownList(
                                "InfEtnia",
                                new List<SelectListItem>
                                {
                                new SelectListItem{ Text="Mestizo",Value = "Mestizo" },
                                new SelectListItem{ Text="Montubio",Value = "Montubio" },
                                new SelectListItem{ Text="Afroecuatoriano",Value = "Afroecuatoriano" },
                                new SelectListItem{ Text="Indígena",Value = "Indígena" },
                                new SelectListItem{ Text="Blanco",Value = "Blanco" }
                                }, "Seleccione una opción",
                                new { @class = "form-select"})
                                <span asp-validation-for="InfEtnia" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="mb-2">
                                <label asp-for="InfGenero" class="form-label text-900"></label>
                                @Html.DropDownList(
                                "InfGenero",
                                new List<SelectListItem>
                                {
                                new SelectListItem{ Text="Hombre",Value = "Hombre" },
                                new SelectListItem{ Text="Mujer",Value = "Mujer" }
                                }, "Seleccione una opción",
                                new { @class = "form-select"})
                                <span asp-validation-for="InfGenero" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <div class="mb-2">
                                <label asp-for="InfSangre" class="form-label text-900"></label>
                                @Html.DropDownList(
                                "InfSangre",
                                new List<SelectListItem>
                                {
                                new SelectListItem{ Text="A positivo (A+)",Value = "A positivo (A +)" },
                                new SelectListItem{ Text="A negativo (A-)",Value = "A negativo (A-)" },
                                new SelectListItem{ Text="B positivo (B+)",Value = "B positivo (B+)" },
                                new SelectListItem{ Text="B negativo (B-)",Value = "B positivo (B-)" },
                                new SelectListItem{ Text="AB positivo (AB+)",Value = "AB positivo (AB+)" },
                                new SelectListItem{ Text="AB negativo (AB-)",Value = "AB negativo (AB-)" },
                                new SelectListItem{ Text="O positivo (O+)",Value = "O positivo (O+)" },
                                new SelectListItem{ Text="O negativo (O-)",Value = "O negativo (O-)" }
                                }, "Seleccione una opción",
                                new { @class = "form-select"})

@model IEnumerable<INTRANET_CR.Models.Usuario>

@{
    ViewData["Title"] = "IndexUser";
}
<div class="card" style="width:100%;">
    <div class="card-header">
        <div class="d-sm-flex align-items-center justify-content-between mb-0">
            <h4 class="card-title"><b>MI PERFIL</b></h4>
            
        </div>
    </div>
    <div class="card-body dataTables_scroll">
        <table id="table" class="table table-striped table-sm fs--1 mb-0" style="width:100%; font-size:0.9rem">
            <thead>
                <tr>
                    <th>Foto</th>
                    <th class="sort border-top ps-3">
                        @Html.DisplayNameFor(model => model.UsNombre1)
                    </th>
                    <th class="sort border-top">
                        @Html.DisplayNameFor(model => model.UsNombre2)
                    </th>                   
                    <th class="sort border-top">
                        @Html.DisplayNameFor(model => model.UsApellido1)
                    </th>
                    <th class="sort border-top">
                        @Html.DisplayNameFor(model => model.UsApellido2)
                    </th>  
                    <td>
                        @Html.DisplayNameFor(model => model.UsEstado)
                    </td>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            <img class="img-circle mr-3 elevation-2" alt="User Image" style="width:3rem; height:3rem;" src="data:image/jpeg;base64, @ViewData["Photo"]" />
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.UsNombre1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UsNombre2)
                        </td>                       
                        <td>
                            @Html.DisplayFor(modelItem => item.UsApellido1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UsApellido2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UsEstado)
                        </td>                      
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.UsCodigo">Editar</a> |
                            <a asp-action="Details" asp-route-id="@item.UsCodigo">Ver</a> |
                            @*<a asp-action="Delete" asp-route-id="@item.UsCodigo">Eliminar</a>*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section scripts{
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>


    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.6.5/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.6.5/js/buttons.colVis.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.6.5/js/buttons.flash.min.js"></script>

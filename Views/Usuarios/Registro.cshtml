                    <div class="text-center d-inline-block"><span class="nav-item-circle-parent"><span class="nav-item-circle"><svg class="svg-inline--fa fa-file-lines" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="file-lines" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512" data-fa-i2svg=""><path fill="currentColor" d="M256 0v128h128L256 0zM224 128L224 0H48C21.49 0 0 21.49 0 48v416C0 490.5 21.49 512 48 512h288c26.51 0 48-21.49 48-48V160h-127.1C238.3 160 224 145.7 224 128zM272 416h-160C103.2 416 96 408.8 96 400C96 391.2 103.2 384 112 384h160c8.836 0 16 7.162 16 16C288 408.8 280.8 416 272 416zM272 352h-160C103.2 352 96 344.8 96 336C96 327.2 103.2 320 112 320h160c8.836 0 16 7.162 16 16C288 344.8 280.8 352 272 352zM288 272C288 280.8 280.8 288 272 288h-160C103.2 288 96 280.8 96 272C96 263.2 103.2 256 112 256h160C280.8 256 288 263.2 288 272z"></path></svg><!-- <span class="fas fa-file-alt"></span> Font Awesome fontawesome.com --></span></span><span class="d-none d-md-block mt-1 fs--1">Aceptación</span></div>
                </a>
            </li>            
        </ul>
    </div>
    <form asp-action="Registro">
    <div class="card-body pt-4 pb-0">
        <div class="tab-content">
            <div class="tab-pane active" role="tabpanel" aria-labelledby="bootstrap-wizard-tab1" id="bootstrap-wizard-tab1">
               
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <div class="mb-2">
                                <label asp-for="UsNombre1" class="form-label text-900"></label>
                                <input asp-for="UsNombre1" class="form-control" />
                                <span asp-validation-for="UsNombre1" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="mb-2">
                                <label asp-for="UsNombre2" class="form-label text-900"></label>
                                <input asp-for="UsNombre2" class="form-control" />
                                <span asp-validation-for="UsNombre2" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <div class="mb-2">
                                <label asp-for="UsApellido1" class="form-label text-900"></label>
                                <input asp-for="UsApellido1" class="form-control" />
                                <span asp-validation-for="UsApellido1" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="mb-2">
                                <label asp-for="UsApellido2" class="form-label text-900"></label>
                                <input asp-for="UsApellido2" class="form-control" />
                                <span asp-validation-for="UsApellido2" class="text-danger"></span>
                            </div>
                        </div>                       
                    </div>
                    <div class="mb-2">
                        <label asp-for="EmCodigo" class="form-label text-900"></label>
                        <select asp-for="EmCodigo" class="form-control" asp-items="ViewBag.EmCodigo"></select>
                    </div>
                    <input asp-for="UsEstado" class="form-control" value="Activo" type="hidden"/>
                    <input asp-for="UsTerminos" class="form-control" value="" type="hidden" />
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="terms" id="terms" />
                        <label class="form-check-label text-900" for="bootstrap-wizard-wizard-checkbox">Acepto los <a href="#!">términos </a>y <a href="#!">política de privacidad</a></label>
                        <br />
                        <span asp-validation-for="UsTerminos" class="text-danger"></span>
                    </div>                               
            </div>      
        </div>
    </div>
    <div class="card-footer border-top-0" data-wizard-footer="data-wizard-footer">
        <div class="d-flex pager wizard list-inline mb-0">
            <button class="d-none btn btn-link ps-0" type="button" data-wizard-prev-btn="data-wizard-prev-btn"><span class="fas fa-chevron-left me-1" data-fa-transform="shrink-3"></span>Previous</button>
            <div class="flex-1 text-end">
                <input type="submit" value="Siguiente" class="btn btn-primary" />
            </div>
        </div>
    </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    var checkbox = document.getElementById('terms');
    checkbox.addEventListener("change", validaCheckbox, false);
    function validaCheckbox() {
        var checked = checkbox.checked;
        if (checked) {
            //alert('checkbox1 esta seleccionado');
            $("#UsTerminos").val("Sí");
        }
        else
        {
            //alert('checkbox1 no esta seleccionado');
            $("#UsTerminos").val("");
        }
    }


</script>
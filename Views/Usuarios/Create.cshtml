                <div class="col">
                    <div class="form-group">
                        <label asp-for="EmCodigo" class="form-label"></label>
                        <select asp-for="EmCodigo" class="form-control" asp-items="ViewBag.EmCodigo"></select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="UsJefe" class="form-label"></label>
                        <input asp-for="UsJefe" class="form-control" />
                        <span asp-validation-for="UsJefe" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="UsGerencia" class="form-label"></label>
                        <input asp-for="UsGerencia" class="form-control" />
                        <span asp-validation-for="UsGerencia" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="UsCambio" class="form-label"></label>
                        <input asp-for="UsCambio" class="form-control" />
                        <span asp-validation-for="UsCambio" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="UsTerminos" class="form-label"></label>
                        <input asp-for="UsTerminos" class="form-control" />
                        <span asp-validation-for="UsTerminos" class="text-danger"></span>
                    </div>
                </div>
            </div>

        </div>
        <div class="card-footer">
            <input type="submit" value="Guardar" class="btn btn-outline-primary " />
            <a class="btn btn-outline-secondary float-end" asp-action="Index"><spam>Cancelar</spam></a>
        </div>
    </form>

</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

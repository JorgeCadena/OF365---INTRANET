                                <input asp-for="InfPorcentajeDiscapacidad" class="form-control" />
                                <span asp-validation-for="InfPorcentajeDiscapacidad" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <div class="mb-2">
                                <label asp-for="InfTelefono" class="form-label text-900"></label>

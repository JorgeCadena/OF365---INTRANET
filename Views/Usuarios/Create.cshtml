@model INTRANET_CR.Models.Usuario

@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <div class="card-header">
        <div class="d-sm-flex align-items-center justify-content-between mb-0">
            <h4 class="card-title"><b>Nuevo</b> - Usuario</h4>
